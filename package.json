{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "angular-monoquery",
  "version": "0.0.4",
  "main": "dist/bundles/angular-monoquery.umd.js",
  "author": "Bryan Goldstein <brysgo@gmail.com>",
  "license": "MIT",
  "ngPackage": {
    "lib": {
