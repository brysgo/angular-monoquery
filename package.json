    "@angular/compiler": "^10.0.5",
    "@angular/compiler-cli": "^10.0.5",
    "@angular/core": "^10.0.5",
    "@angular/platform-browser": "^10.0.5",
    "@angular/platform-browser-dynamic": "^10.0.5",
    "@types/jest": "^26.0.7",
    "apollo-angular": "^1.10.0",
    "apollo-angular-link-http": "^1.11.0",
    "graphql-path": "^3.1.6",
    "jest": "^26.1.0",
    "jest-preset-angular": "^8.2.1",
    "monoquery": "^1.3.3",
    "ng-packagr": "^10.1.1",
    "rxjs": "^6.6.0",
    "rxjs-compat": "^6.6.0",
    "typescript": "^3.9.7",
    "zone.js": "^0.10.3"
  },
  "peerDependencies": {
    "graphql-path": "*",
    "monoquery": "*",
    "rxjs": "*"
